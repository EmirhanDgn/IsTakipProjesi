    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var navLinks = document.querySelectorAll('.nav-item > a.nav-link');

            navLinks.forEach(function (link) {
                link.addEventListener('click', function (e) {
                    var parent = link.parentElement;
                    var treeviewMenu = parent.querySelector('.nav-treeview');

                    if (treeviewMenu) {
                        e.preventDefault();

                        if (treeviewMenu.style.display === 'none' || treeviewMenu.style.display === '') {
                            treeviewMenu.style.display = 'block';
                        } else {
                            treeviewMenu.style.display = 'none';
                        }
                    }
                });
            });
        });
    </script>
